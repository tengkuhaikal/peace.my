
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TVResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Reset Password"
        android:textColor="#020202"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ResetPasswordBackgroundPanel"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/background_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/ResetPasswordNewPasswordBox"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_gray"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordBackgroundPanel" />

    <View
        android:id="@+id/ResetPasswordConfirmPasswordBox"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/background_gray"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintTop_toBottomOf="@+id/ResetPasswordNewPasswordBox" />

    <EditText
        android:id="@+id/PTResetPasswordNewPassword"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:elevation="3px"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="New Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordNewPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordNewPasswordBox" />

    <EditText
        android:id="@+id/PTResetPasswordConfirmPassword"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:elevation="3px"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordConfirmPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordConfirmPasswordBox" />

    <ImageButton
        android:id="@+id/TBtnResetPasswordShowNewPassword"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:contentDescription="Show/Hide Password"
        android:elevation="5dp"
        android:padding="10dp"
        android:src="@drawable/visibility_off"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordNewPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/PTResetPasswordNewPassword" />

    <ImageButton
        android:id="@+id/TBtnResetPasswordShowConfirmPassword"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="Show/Hide Password"
        android:elevation="5dp"
        android:padding="10dp"
        android:src="@drawable/visibility_off"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordConfirmPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/PTResetPasswordConfirmPassword" />

    <Button
        android:id="@+id/BtnResetPasswordCancel"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/secondary_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordBackgroundPanel" />

    <Button
        android:id="@+id/BtnResetPasswordOkay"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/primary_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Okay"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/ResetPasswordBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/ResetPasswordBackgroundPanel" />

</androidx.constraintlayout.widget.ConstraintLayout>
