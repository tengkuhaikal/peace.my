<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F9F9F9">

    <!-- Title -->
    <TextView
        android:id="@+id/TVHeaderChooseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Choose type"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Card Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:padding="30dp"
        android:background="#98A869"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- Medication Type Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Pill -->
            <ImageButton
                android:id="@+id/pillButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pill"
                android:contentDescription="Pill"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:adjustViewBounds="true" />

            <!-- Capsule -->
            <ImageButton
                android:id="@+id/capsuleButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_capsule"
                android:contentDescription="Capsule"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:adjustViewBounds="true" />

            <!-- Fluid -->
            <ImageButton
                android:id="@+id/fluidButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_fluid"
                android:contentDescription="Fluid"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:adjustViewBounds="true" />

            <!-- Injection -->
            <ImageButton
                android:id="@+id/injectionButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_injection"
                android:contentDescription="Injection"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <!-- Input Fields -->
        <EditText
            android:id="@+id/medicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of medication (e.g. paracetamol)"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage (e.g. 10mg)"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Frequency (e.g. 1)"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/timeTaken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time taken (e.g. morning)"
            android:background="@drawable/edit_text_background"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <!-- Set Button to save data-->
        <Button
            android:id="@+id/setButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set"
            android:background="@drawable/edit_text_background_dark_green"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</LinearLayout>