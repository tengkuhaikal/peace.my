<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/RequestTACBackgroundPanel"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/background_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVEnterTACCodeHere" />

    <TextView
        android:id="@+id/TVEnterTACCodeHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="134dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Enter TAC code here"
        android:textColor="#020202"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVVerifyYourPhoneNumber" />

    <TextView
        android:id="@+id/TVVerifyYourPhoneNumber"
        android:layout_width="237dp"
        android:layout_height="89dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="87dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Verify your phone number"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/RequestTACCodeBox"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/background_gray"
        app:layout_constraintEnd_toEndOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/RequestTACBackgroundPanel" />

    <EditText
        android:id="@+id/TNRequestTACCode"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:elevation="3px"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="TAC Code"
        android:inputType="number"
        android:padding="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/RequestTACCodeBox"
        app:layout_constraintTop_toTopOf="@+id/RequestTACCodeBox" />

    <Button
        android:id="@+id/BtnRequestTACBack"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/secondary_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Back"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintTop_toBottomOf="@+id/TNRequestTACCode" />

    <Button
        android:id="@+id/BtnRequestTACVerify"
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/primary_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintTop_toBottomOf="@+id/TNRequestTACCode" />

    <Button
        android:id="@+id/BtnRequestTACAgain"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:padding="12dp"
        android:text="Didn't get the code? Request again"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintEnd_toEndOf="@+id/RequestTACBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/RequestTACBackgroundPanel" />

</androidx.constraintlayout.widget.ConstraintLayout>