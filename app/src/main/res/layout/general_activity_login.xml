<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:outlineProvider="none">

    <View
        android:id="@+id/LoginUsernameBox"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/background_gray"
        android:elevation="3px"
        app:layout_constraintEnd_toEndOf="@+id/LoginBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/LoginBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/LoginBackgroundPanel" />

    <EditText
        android:id="@+id/PTLoginUsername"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginEnd="3dp"
        android:background="#00000000"
        android:elevation="3px"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Username"
        android:inputType="text"
        android:padding="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/LoginUsernameBox"
        app:layout_constraintStart_toStartOf="@+id/LoginUsernameBox"
        app:layout_constraintTop_toTopOf="@+id/LoginUsernameBox" />

    <ImageButton
        android:id="@+id/IBVisibilityOff"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="Show/Hide Password"
        android:elevation="5dp"
        android:padding="10dp"
        android:src="@drawable/visibility_off"
        app:layout_constraintEnd_toEndOf="@+id/LoginPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/LoginPasswordBox" />

    <View
        android:id="@+id/LoginPasswordBox"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/background_gray"
        android:elevation="3px"
        app:layout_constraintEnd_toEndOf="@+id/LoginBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/LoginBackgroundPanel"
        app:layout_constraintTop_toBottomOf="@+id/LoginUsernameBox" />

    <EditText
        android:id="@+id/PTLoginPassword"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:elevation="3px"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#A2A2A2"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/LoginPasswordBox"
        app:layout_constraintTop_toTopOf="@+id/LoginPasswordBox" />

    <Button
        android:id="@+id/BtnLoginCancel"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/secondary_button"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Cancel"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/LoginBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/LoginBackgroundPanel" />

    <Button
        android:id="@+id/BtnLoginLogin"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/primary_button"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/LoginBackgroundPanel"
        app:layout_constraintTop_toTopOf="@+id/LoginBackgroundPanel" />

    <Button
        android:id="@+id/BtnLoginForgotPassword"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="88dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:padding="12dp"
        android:text="Forgot password"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBackgroundPanel"
        app:layout_constraintEnd_toEndOf="@+id/LoginBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/LoginBackgroundPanel" />

    <Button
        android:id="@+id/BtnLoginSignUp"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:padding="12dp"
        android:text="Don't have an account? Sign Up"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/LoginBackgroundPanel"
        app:layout_constraintEnd_toEndOf="@+id/LoginBackgroundPanel"
        app:layout_constraintStart_toStartOf="@+id/LoginBackgroundPanel" />

    <TextView
        android:id="@+id/TVLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Login"
        android:textColor="#020202"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/LoginBackgroundPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/LoginBackgroundPanel"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/background_green"
        android:elevation="2px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>