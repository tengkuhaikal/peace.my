<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6B8E23" /> <!-- Darker purple when pressed -->
            <corners android:radius="60dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6B8E23" /> <!-- Default purple -->
            <corners android:radius="60dp" />
            <stroke android:width="10dp" android:color="#FFFFFF" /> <!-- Optional border -->
        </shape>
    </item>
</selector>